{
    "manifest_version": 2,
    "name": "save-to-org",
    "version": "0.0.1",
    "description": "Saves a link to an Emacs org document",
    "homepage_url": "https://github.com/roosta/save-to-org",
    "icons": {
        "48": "icons/48.png",
        "96": "icons/96.png"
    },

    "permissions": [
        "activeTab",
        "clipboardWrite"
    ],
    "commands": {
        "copy-as-org": {
            "suggested_key": {
                "default": "Ctrl+Y",
                "linux": "Ctrl+Y"
            },
            "description": "Send a copy-to-org event"
        }
    },

    "background": {
      "page": "background.html"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
