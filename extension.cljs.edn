^{:watch-dirs ["src/extension"]}
{:asset-path    "/out/js"
 :output-dir    "out/js"
 :infer-externs true
 :foreign-libs  [{:file     "src/js/mousetrap.js"
                  :file-min "src/js/mousetrap.min.js"
                  :provides ["js.mousetrap"]}]
 :source-map true
 :optimizations :none
 :modules {:background     {:entries #{yank.background}
                            :output-to "out/js/background.js"}
           :options        {:entries #{yank.options}
                            :output-to "out/js/options.js"}
           :content-script {:entries #{yank.content-script}
                            :output-to "out/js/content-script.js"}
           :browser-action {:entries #{yank.browser-action}
                            :output-to "out/js/browser-action.js"}}}
